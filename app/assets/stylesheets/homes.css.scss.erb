/* Sticky footer styles
-------------------------------------------------- */

@import 'colors';


.no_underline{
  &:hover {
    text-decoration: none;
  }
}

/* change the path of icons for bootstrap */
@font-face {
  font-family: 'Glyphicons Halflings';
  src: url(<%= asset_path 'glyphicons-halflings-regular.eot' %>);
  src: url(<%= asset_path 'glyphicons-halflings-regular.eot?#iefix' %>) format('embedded-opentype'), 
       url(<%= asset_path 'glyphicons-halflings-regular.woff' %>) format('woff'), 
       url(<%= asset_path 'glyphicons-halflings-regular.ttf' %>) format('truetype'), 
       url(<%= asset_path 'glyphicons-halflings-regular.svg#glyphicons_halflingsregular' %>) format('svg');
}


html {
  position: relative;
  min-height: 100%;
}

body {
  height: 100%;
   margin-bottom: 60px;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}


.main-container{
  margin-top: 40px;
  height: 100%;
}


.nadvence-box{
  margin-top: 10px;
  padding: 20px;
  opacity: 0.9;
  background-color: rgb(247, 247, 247);
}


.box-title{
  text-transform: uppercase;
  font-family: "STXihei", Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 100;
  letter-spacing: 1px;
  color: rgb(103, 106, 108);
  font-size: 18px;
  letter-spacing: 1px;
  margin-bottom: 5px;
}

.nadvence-family{
  text-transform: uppercase;
  font-family: "STXihei", Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 100;
  letter-spacing: 1px;
}

.box-big-title{
  text-transform: uppercase;
  font-family: "STXihei", Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 100;
  letter-spacing: 1px;
  color: rgb(103, 106, 108);
  letter-spacing: 1px;
  margin-bottom: 5px;
}

.small-text{
	font-size: 13px;
}

a:hover{
	color:$nadvence;
	background-color: transparent;
}

// For anchor link with a fixed navbar
.anchor{
	display: block;
  height: 60px; /*same height as header*/
  margin-top: -60px; /*same height as header*/
  visibility: hidden;
}
